<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="issue"
            type="com.jacksonueda.test.data.model.Issue" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/issueIcon"
            android:layout_width="20dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_height="20dp"
            android:contentDescription="@string/issue_icon"
            android:src="@drawable/ic_issue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/issueTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:text="@{issue.title}"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:transitionName="name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/issueIcon"
            app:layout_constraintTop_toTopOf="@+id/issueIcon"
            tools:text="Site-kit-wp" />

        <TextView
            android:id="@+id/issueDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`#` + issue.number + ` opened by ` + issue.user.login}"
            android:textSize="@dimen/text_medium"
            android:transitionName="email"
            android:layout_marginBottom="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/issueTitle"
            app:layout_constraintTop_toBottomOf="@+id/issueTitle"
            tools:text="#39 opened on 26 Aug 2020 by adrik18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mediumGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>